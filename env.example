APP_NAME=Newsly
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

APP_LOCALE=ar
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ar_SA

MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=newsly
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_PREFIX=newsly_

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@newsly.app"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# SANCTUM CONFIGURATION
# ===========================================
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1

# ===========================================
# GOOGLE OAUTH CONFIGURATION
# ===========================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=${APP_URL}/auth/google/callback

# Mobile Client IDs (for ID Token verification)
GOOGLE_MOBILE_CLIENT_ID_ANDROID=your-android-client-id.apps.googleusercontent.com
GOOGLE_MOBILE_CLIENT_ID_IOS=your-ios-client-id.apps.googleusercontent.com

# ===========================================
# FIREBASE CLOUD MESSAGING (FCM)
# ===========================================
FIREBASE_CREDENTIALS=${APP_URL}/storage/firebase-credentials.json

# ===========================================
# RSS FETCHER CONFIGURATION
# ===========================================
RSS_FETCH_INTERVAL_SECONDS=300
RSS_MAX_CONCURRENT_FETCHES=10
RSS_REQUEST_TIMEOUT=30
RSS_USER_AGENT="Newsly/1.0 (+https://newsly.app)"

# ===========================================
# NOTIFICATION CONFIGURATION
# ===========================================
FCM_BATCH_SIZE=500
FCM_RETRY_COUNT=3
NOTIFICATION_QUEUE=notifications

# ===========================================
# RATE LIMITING
# ===========================================
API_RATE_LIMIT_PER_MINUTE=60
AUTH_RATE_LIMIT_PER_MINUTE=10

# ===========================================
# ADMIN CONFIGURATION
# ===========================================
ADMIN_EMAIL=admin@newsly.app
ADMIN_PASSWORD=change_this_password



